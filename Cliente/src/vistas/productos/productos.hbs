<link rel="stylesheet" href="/css/productos/productos.css">
<div id="navegacion">
    <div id="categorias">
        <a id="Tiendas" href="/tienda/lista"> Tiendas</a>
        {{#each tienda}}
        <a id="Consumibles" href="/productos/consumibles/{{id}}"> Consumibles</a>
        {{/each}}
        <a id="noConsumibles" href="/productos/noconsumibles/{{user.id}}"> No consumibles</a>
        <a id="Bebidas" href="/productos/bebidas/{{user.id}}"> Bebidas </a>
    </div>
</div>
<hr>
<div id="lista">
    <table id="tabla">
        <tr>
            <td id="nombres">
                {{#each NombreLista}}
                <input type="text" name="nombreLista" id="LISTAN" value="{{nombreLista}}" readonly>
                {{/each}}
                <p id="nombre">Lista de Productos</p>
            </td>
            <td id="nombres">
                <input id="precio" value="Precios"></input>
            </td>
        </tr>
        {{#each lista}}
        <tr>
            <td id="Producto">{{NombreProducto }}</td>
            <td id="precio">${{Precio}}</td>
        </tr>
        {{/each}}
    </table>
</div>
<div id="boton">
    <button id="carrito" onclick="a.aparecerLista()"><img src="/img/carrito.png" id="img"></button>
    <button id="carrito1" onclick="a.esconderLista()"><img src="/img/carrito.png" id="img"></button>
</div>
<div id="contenido">
    <!--card--->
    <form action="/producto/lista/{{user.id}}" method="POST" id="tienda">
        <div id="nombreLista">
            <div id="GuardarLista">
                <label id="listaNombre">Nombre de Lista:</label>
                <input type="text" name="nombreLista" id="NombreLista" value="Lista {{user.Nombres}}" readonly>
                <button type="submit" id="btones"><img src="/img/guardar.png" id="guardar"></button>
            </div>
        </div>
        <div class="container p-4">
            <div class="row">
                {{#each listaProductos}}
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <input type="text" value="{{id}}" readonly id="cantidad">
                            <input type="text" value="{{NombreProducto}}" readonly id="cantidad">
                            <input type="text" value="{{productoCantidad}}" readonly id="cantidad">
                            <input type="text" value="{{precioVenta}}" readonly id="cantidad">
                            <button id="comprar"><a href="/Compras/eleccion/{{id}}">COMPRAR</a></button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div id="mover">
            {{#each tienda}}
            <button id="ver"><a href="/Compra/listaCompleta/{{id}}" id="letras">Ver m√°s productos</a></button>
            {{/each}}
        </div>
    </form>
</div>

<script src="/js/lista.js"></script>