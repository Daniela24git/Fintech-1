<link rel="stylesheet" href="/css/productos/lista.css">
{{#each tienda}}
<form action="/Compra/listaCompleta/{{id}}">
{{/each}}
    <table id="tabla">
        <tr>
            <td id="nombres"><p id="nombre">Lista de Productos</p></td>
            <td id="nombres"><p id="Cantidad">Cantidad</p></td>
            <td id="nombres"><p id="precio">Precios</p></td>
        </tr>
        {{#each lista}}
        <tr>
            <td id="Producto"><input type="text" name="Nombre" value="{{Nombre}}" readonly></td>
            <td id="Cantidad"><input type="number" name="Cantidad" id="cantidaes" value="1" min="1" max="{{Cantidad}}" onclick="listas.modificar()"></td>
            <td id="precio"><input type="text" name="Precio" value="{{Precio}}" readonly id="precios"></td>
            <td><button><a href="/producto/Compra/Eliminar/{{id}}">Eliminar</a></button></td>
        </tr>
        {{/each}}
        <tr>
            <td><label id="">Total:</label></td>
            <td></td>
            <td><input type="text" name="" id="total"></td>
        </tr>
        <tr>
            <td></td>
        </tr>
        <tr>
            <td id="nombres"><p id="nombre">Confirmar Compra</p></td>
            <td></td>
            <td><button id="boton"><a href="/formaPago/notaVenta">Comprar</a></button></td>
        </tr>
    </table>
</form>

<script src="/js/listaCompleta.js"></script>