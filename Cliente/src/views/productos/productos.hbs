<link rel="stylesheet" href="/css/productos.css">
<div id="navegacion">
    <div id="categorias">
        <a id="Tiendas" href="/tienda/lista"> Tiendas</a>
        {{#each tienda}}
        <a id="Consumibles" href="/productos/consumibles/{{id}}"> Consumibles</a>
        {{/each}}
        <a id="noConsumibles" href="/productos/noconsumibles"> No consumibles</a>
        <a id="Bebidas" href="/productos/bebidas"> Bebidas </a>
    </div>
</div>
<hr>
<div id="lista">
    <table border="1" id="tabla">
        <tr>
            <td id="nombres">
                <p id="nombre">Lista de Productos</p>
            </td>
            <td id="nombres">
                <p id="precio">Precios</p>
            </td>
        </tr>
        {{#each lista}}
        <tr>
            <td id="Producto">{{Nombre}}</td>
            <td id="precio">${{Precio}}</td>
        </tr>
        {{/each}}
    </table>
</div>
<div id="boton">
    <button id="carrito" onclick="a.aparecerLista()"><img src="/img/carrito.png" id="img"></button>
    <button id="carrito1" onclick="a.esconderLista()"><img src="/img/carrito.png" id="img"></button>
</div>
<div id="contenido">
    <!--card--->
    {{#each listaProductos}}
    <form action="/producto/lista/{{id}}" method="GET" id="tienda">
    {{/each}}
        <div class="container p-4">
            <div class="row">
                {{#each listaProductos}}
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <input type="text"  value="{{id}}" readonly id="cantidad">
                            <input type="text"  value="{{NombreProducto}}" readonly id="cantidad" >
                            <input type="text"  value="{{Cantidad}}" readonly id="cantidad">
                            <input type="text"  value="{{precioVenta}}" readonly id="cantidad">
                            <button id="comprar"><a href="/Compras/eleccion/{{id}}">COMPRAR</a></button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div id="mover">
        {{#each tienda}}
        <button id="ver"><a href="/Compra/listaCompleta/{{id}}" id="letras">Ver m√°s productos</a></button>
        {{/each}}
        </div>
    </form>
</div>

<script src="/js/lista.js"></script>