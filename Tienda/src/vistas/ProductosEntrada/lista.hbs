<LINK REL=StyleSheet HREF="/css/productoEntrada/productoslista.css" TYPE="text/css" MEDIA=screen>
<form action="/ProductoEntrada/lista/{{user.idUsuarios}}">
    <nav id="nav">
        <div>
            <a id="entradas" href="/entradaSalida/eleccion/{{user.idUsuarios}}">Entradas y Salidas</a>
            <a id="bodega" href="/productos/lista/{{user.idUsuarios}}">Bodega</a>
        </div>
    </nav>
    <div id="contenedor">
        <div class="row">
             {{#each DatosProducto}}
            <div id="tarjeta">
                <div id="CODIGO">
                    <label>Código:</label>
                    <input type="text" value="{{codigo}}" id="codigo" readonly></input>
                </div>
                <div id="PRODUCTO">
                    <label>Producto:</label>
                    <input type="text" value="{{NombreProducto}}" id="NombreProducto" readonly></input>
                </div>
                <div id="CANTIDAD">
                    <label>Cantidad:</label>
                    <input type="text" value="{{CantidadTotal}} {{unidadMedida}}" id="Cantidad" readonly></input>
                </div>
                <div id="PRECIO">
                    <label>Precio:</label>
                    <input type="text" value="{{precioTotal}}$" id="precioActual" readonly></input>
                </div>
                <div id="PRECIOUNIDAD">
                    <label>Precio Unidad:</label>
                    <input type="text" value="{{precioUnidad}}$" id="precioUnidad" readonly></input>
                </div>
                <div id="BotonEditar">
                    <a href="/ProductoEntrada/editar/{{idProductoEntradas}}"><img src="/img/iconos/edit.png"><span id="tooltip">Editar</span></a>
                </div>
                <div id="botonX">
                    <a href="/ProductoEntrada/Eliminar/{{idProductoEntradas}}">
                    <img src="/img/iconos/borrar.png" id="delete"><span id="tooltips">Eliminar</span>
                    </a>
                </div>
                <div id="agregarDetalleProducto">
                    <a href="/detalleProducto/agregar/{{idProductoEntradas}}"><button type="button">Detalles</button></a>
                </div>
            </div>
            {{else}}
            <div id="bienvenida">
                <div>
                    <p>¡No has registrado Productos.!</p>
                    <div id="masTiendas">
                    <a href="/ProductoEntrada/agregar/{{user.idUsuarios}}">¡Introducir uno!</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</form>