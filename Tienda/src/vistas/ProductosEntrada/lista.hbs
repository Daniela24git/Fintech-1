<LINK REL=StyleSheet HREF="/css/productoEntrada/productoslista.css" TYPE="text/css" MEDIA=screen>
<form action="/ProductoEntrada/lista">
<div id="contenedor">
    <div class="row"  >
        {{#each DatosProducto}}
        <div class="col-md-4,5 col-ml-8" >
                <div class="card-body" >
                      <div  id="tarjeta">
                    <table border="0.5"  >
                        <tr>
                            <td>Codigo</td>
                            <td style="text-align: right;">{{codigo}}</td>
                        </tr>
                        <tr>
                            <td>Nombre del Producto:</td>
                            <td style="text-align:right;">{{NombreProducto}}</td>
                        </tr>
                        <tr>
                            <td>Cantidad:</td>
                            <td style="text-align: right;">{{Cantidad}}</td>
                        </tr>
                        <tr>
                            <td>Precio:</td>
                            <td style="text-align: right;">{{precioActual}}$</td>
                        </tr>                                                
                    </table>
                    <button><a href="/ProductoEntrada/editar/{{id}}">Editar Producto</a></button>
                   <button><a href="/ProductoEntrada/Eliminar/{{id}}">Eliminar Producto</a></button>
                </div>
            </div>
            <br>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>¡No has registrado Productos.!</p>
                <a href="/ProductoEntrada/agregar/{{user.id}}">¡Introducir uno!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
</form>
