<LINK REL=StyleSheet HREF="/css/tienda/tiendaAgregar.css" TYPE="text/css" MEDIA=screen>
<img src="/img/avatar.png" id="avatar"></img>
<div id="datosUsuario">
    <p>
        <label id="dato">{{user.username}}</label>
    </p>
</div>
<div id="contenido">
    <label id="DatoNegocio">Datos del Negocio</label>
    <div id="formulario">
        <form action="/tienda/agregar/{{user.id}}" method="POST">
            <div>
                <label id="Nombre">Nombre:</label>
                <input type="text" name="nombreNegocio" id="nombreNegocio" checked>
            </div>
            <div>
                 <div>
                     <label id="RUC">RUC:</label>
                     <input type="text" name="ruc" id="ruc" checked>
                 </div>
                 <div>
                     <label id="Direccion">Direccion</label>
                     <input type="text" name="direccion" id="direccion" checked>
                 </div>
                <div id="CELULAR">
                    <label id="celular1">Celular:</label>
                    <input type="number" name="celular" min="0" id="celular" checked>
                </div>
                <div id="Telefonos">
                    <label id="telefono">Telefono:</label>
                    <input type="number" name="telefono" min="0" id="Telefono">
                </div>
            </div>
            <div id="boton">
                <button type="submit" id="guardar1">Guardar</button>
            </div>
        </form>
    </div>
</div>