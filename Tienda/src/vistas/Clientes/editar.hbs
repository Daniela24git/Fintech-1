<LINK REL=StyleSheet HREF="/css/clientes/clientesEditar.css" TYPE="text/css" MEDIA=screen>
 {{#each clientes}}
<form action="/clientes/editar/{{id}}" method="POST" id="f1">
     <p id="p">Edita Producto </p>
    <div id="contenedor_1">
        <div id="CODIGO">
            <label id="codigos">Codigo:</label>
            <input type="text" name="Nombres" id="codigo" value="{{Nombres}}" readonly>
        </div>
        <div id="PRODUCTO">
            <label id="producto">Producto :</label>
            <input type="text" name="Direccion" id="NombreProducto" value="{{Direccion}}">
        </div>
        <div id="CANTIDAD">
            <label id="cantidad">Telefono:</label>
            <input type="number" name="telefono" id="Cantidad" value="{{telefono}}">
        </div>
        <div id="PRECIO">
            <label id="precios">Precio:</label>
            <input type="text" name="Celular" id="precio" value="{{Celular}}">
        </div>
        <button type="submit" id="guardar1"> <img id="guardar_2" src="/img/guardar.png"></button>
    </div>
</form>
{{/each}}