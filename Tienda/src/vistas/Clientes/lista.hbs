<form action="/clientes/lista/{{user.id}}"></form>
<LINK REL=StyleSheet HREF="/css/clientes/clientesLista.css" TYPE="text/css" MEDIA=screen>
    <div id="contenedor">
        <div class="row">
            {{#each clientes}}
            <div id="tarjeta">
                <div id="CODIGO">
                    <label>Codigo:</label>
                    <input type="text" value="{{Nombres}}" id="codigo" readonly></input>
                </div>
                <div id="PRODUCTO">
                    <label>Producto:</label>
                    <input type="text" value="{{Direccion}}" id="NombreProducto" readonly></input>
                </div>
                <div id="CANTIDAD">
                    <label>Cantidad:</label>
                    <input type="text" value="{{Celular}}" id="Cantidad" readonly></input>
                </div>
                <div>
                    <a href="/clientes/editar/{{id}}" id="BotonEditar"><img
                                src="/img/iconos/editar.png" id="editar"></a>
                </div>
                <div>
                   <a href="/clientes/Eliminar/{{id}}" id="botonX"><img src="/img/iconos/eliminar.png"
                            id="eliminar"></a></a>
                </div>
            </div>
            {{else}}
            <div id="agregar">
                <div>
                    <p>¡No has registrado Productos.!</p>
                    <a href="/clientes/agregar/{{user.id}}">¡Introducir uno!</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</form>