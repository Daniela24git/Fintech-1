<link rel="stylesheet" href="/css/productos/editarProducto.css">
{{#each Productos}}
<form action="/productos/editar/{{idProductos}}" method="POST" id="f1">
   <p id="p">Edita Producto </p>
    <div id="contenedor_1">
        <div id="CODIGO">
            <label id="codigos">Codigo:</label>
            <input type="text" name="codigo" id="codigo" value="{{codigo}}" readonly>
        </div>
        <div id="PRODUCTO">
            <label id="producto">Producto :</label>
            <input type="text" name="NombreProducto" id="NombreProducto" value="{{NombreProducto}}" readonly>
        </div>
        <div id="CANTIDAD">
            <label id="cantidad">Cantidad:</label>
            <input type="text" name="cantidadVenta" id="Cantidad" value="{{cantidadVenta}}">
        </div>
        <div id="PRECIO">
            <label id="precios">Precio:</label>
            <input type="text" name="precioVenta" id="precio" value="{{precioVenta}}">
        </div>
        <div id="CADUCIDAD">
            <label id="caducidad">Fecha Caducidad:</label>
            <input type="datetime" name="FechaCadusidad" id="FechaCadusidad" value="{{FechaCadusidad}}" readonly>
        </div>
        <button type="submit" id="guardar1"> <img id="guardar_2" src="/img/guardar.png"></button>
    </div>
</form>
{{/each}}

<script src="/js/productosVentaEditar.js"></script>