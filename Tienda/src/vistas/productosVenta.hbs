<LINK REL=StyleSheet HREF="/css/productos/listaProductos.css" TYPE="text/css" MEDIA=screen>
<form action="/productos/lista/{{user.idUsuarios}}">
    <div id="contenedor">
        <div class="row">
            {{#each productos}}
            <div id="tarjeta">
                <div id="CODIGO">
                    <label>Código:</label>
                    <input type="text" value="{{codigo}}" id="codigo" readonly></input>
                </div>
                <div id="PRODUCTO">
                    <label>Producto:</label>
                    <input type="text" value="{{NombreProducto}}" id="NombreProducto" readonly></input>
                </div>
                <div id="CANTIDAD">
                    <label>Cantidad Total:</label>
                    <input type="text" value="{{productoCantidad}}" id="Cantidad" readonly></input>
                </div>
                <div id="UnidadVenta">
                    <label>Unidad:</label>
                    <input type="text" value="{{unidadVeneta}}" id="unidadVenta" readonly></input>
                </div>
                <div id="CANTIDADVenta">
                    <label>Cantidad x Unidad:</label>
                    <input type="text" value="{{cantidadVenta}}" id="CantidadVenta" readonly></input>
                </div>
                <div id="PRECIO">
                    <label>Precio:</label>
                    <input type="text" value="{{precioVenta}}$" id="precioActual" readonly></input>
                </div>
                <div id="CADUCIDAD">
                    <label id="caducidad">Fecha:</label>
                    <input type="datetime" name="FechaCadusidad" id="FechaCadusidad" value="{{FechaCadusidad}}"
                        readonly>
                </div>
                <div>
                    <a href="/productos/editar/{{idProductos}}" id="BotonEditar"><img src="/img/iconos/editar.png"
                            id="editar"></a>
                </div>
            </div>
            {{else}}
            <div id="agregar">
                <div>
                    <p>¡No has registrado Productos.!</p>
                    <a href="/productos/agregar/{{user.idUsuarios}}">¡Introducir uno!</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</form>
