<LINK REL=StyleSheet HREF="/css/proveedor/editarproveedor.css" TYPE="text/css" MEDIA=screen>
<div id="contenedor">
    <p id="p"> Editar Proveedor</p>
    <div>
        {{#each proveedores}}
        <form action="/proveedor/editar/{{idProvedores}}" method="POST" id="f2">
            <div id="NOMBRES">
                <label id="lblnombre">Nombre:</label>
                <input type="text" name="NombreProveedor" id="NombreProveedor" value="{{NombreProveedor}}">
            </div>
            <div id="DIRECCION">
                <label id="lbldir">Dirección:</label>
                <input type="text" name="Direccion" id="direccion" value="{{Direccion}}">
            </div>
            <div id="CELULAR">
                <label id="lblCelular">Celular:</label>
                <input type="text" name="Celular" id="celular" value="{{Celular}}">
            </div>
            <div id="TELEFONO">
                <label id="lblTelefono">Teléfono:</label>
                <input type="text" name="Telefono" id="Telefono" value="{{Telefono}}">
            </div>
            <div id="ESTADO">
                <label id="lblestado">Estado:</label>
                <select name="Estado" id="Estado" value="{{Estado}}">
                    <option disabled="" selected="">Seleccionar Estado</option>
                    <option value="true">Activo</option>
                    <option value="false">Inactivo</option>
                </select>
            </div>
            <button type="submit" id="guardar">Editar</button>
        </form>
        {{/each}}
    </div>
</div>