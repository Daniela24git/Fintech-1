<LINK REL=StyleSheet HREF="/css/proveedor/editarproveedor.css" TYPE="text/css" MEDIA=screen>
<div id="contenedor">
    <p id="p"> Editar Proveedor</p>
    <div id="contenedor_1">
        <div>
            {{#each proveedores}}
            <form action="/proveedor/editar/{{idProvedores}}" method="POST" id="f2">
                <div id="NOMBRES">
                    <label id="lblnombre" >Nombre:</label>
                    <input type="text" name="NombreProveedor" id="NombreProveedor"
                        value="{{NombreProveedor}}">
                </div>
                <div id="DIRECCION">
                    <label id="lbldir" >Dirección:</label>
                    <input type="text" name="Direccion" id="Celular" value="{{Direccion}}">
                </div>
                <div id="CELULAR">
                    <label id="lblCelular">Celular:</label>
                    <input type="text" name="Celular" id="Celular" value="{{Celular}}">
                </div>
                <div id="TELEFONO">
                    <label id="lblTelefono">Teléfono:</label>
                    <input type="text" name="Telefono" id="Telefono" value="{{Telefono}}">
                </div>
                <div id="ESTADO">
                    <label id="lblestado">Estado:</label>
                    <input type="text" name="Estado" id="Estado" value="{{Estado}}">
                </div>
                <button type="submit" id="guardar"> <img id="guardar_1" src="/img/guardar.png" alt="guardar"></button>
            </form>
            {{/each}}
        </div>
    </div>
</div>